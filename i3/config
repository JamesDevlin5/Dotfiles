# read 1 character and mark the current window with this character
bindsym $mod+Shift+m exec --no-startup-id i3-input -F 'mark %s' -l 1 -P 'Mark: '

# read 1 character and go to the window with the character
bindsym $mod+Ctrl+m exec --no-startup-id i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '

