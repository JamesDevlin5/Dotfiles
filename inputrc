#$include /etc/inputrc

set bell-style visible
set blink-matching-paren on
set colored-completion-prefix on
set colored-stats on
set completion-ignore-case on
set completion-map-case on
set completion-prefix-display-length 10
set mark-directories on
set mark-symlinked-directories on
set menu-complete-display-prefix on
set print-completions-horizontally on
set show-all-if-ambiguous on
set show-all-if-unmodified on
set show-mode-in-prompt on
set skip-completed-text on
set visible-stats on

# Reload this file
"\C-x\C-r": re-read-init-file

# Traverse history
"\C-p": history-search-backward
"\C-n": history-search-forward

# Compose with EDITOR
"\C-e": edit-and-execute-command

# Tab menu-completion
"\t": menu-complete
# And S-Tab for backwards
"\e[Z": menu-complete-backward

set editing-mode vi

$if mode=vi
  #set keymap vi-command
  # Keys for `vi-command' mode
  set keymap vi-insert
  # Keys for `vi-insert' mode
  Control-l: clear-screen
$endif

# Pipe cursor in insert mode
set vi-ins-mode-string "\033\[6 q"
# Block cursor in command mode
set vi-cmd-mode-string "\033\[2 q"


