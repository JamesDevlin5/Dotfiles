function! LightlineReadonly()
    return &readonly && &filetype !=# 'help' ? '[ ÔÄ£ ] RO' : ''
endfunction

function! LightlineSpell()
    return &spell ? &spelllang.' Óäã ' : ''
endfunction

function! LightlineFugHead()
    if empty(FugitiveGitDir())
        return 'Not in Git Dir'
    endif
    let branch_name = substitute(FugitiveStatusline(), '^\[Git(\(.*\))]$', '\1', '')
    return branch_name.'  Ôêò '
endfunction

function! LightlineFilename()
    let _fname = expand('%:p:~:t')
    if _fname ==# ''
        " If filename is empty
        if &ft == 'qf'
            return '{ QF }'
        elseif &ft == 'netrw'
            return ''
        else
            return ' [No Name] '
        endif
    else
        let filename = _fname
        let modified = &modified ? '* ' : '  '
        return ' '.filename.modified
    endif
endfunction

function! LightlineFiletypeicon()
    let icon_map = { 'python': ' Ô†† ', 'rust': ' Ôê£ ', 'c': ' Ô≠∞ ', 'cpp': ' Ô≠± ', 'vim': ' Óò´ ',
                \   'javascript': ' Óòå ', 'html': ' ÓùÑ ', 'xml': ' ÔÑ° ', 'go': ' Ôû¨ ', 'java': ' Óâñ ',
                \   'text': ' ÔÉ∂ ', 'terminal': ' Ôíâ ', 'shell': ' Ôíâ ', 'bash': ' Ôíâ ', 'zsh': ' Ôíâ ',
                \   'undotree': ' ÔÉ¢ ', 'qf': ' Ô¢ù ', 'scratch': ' ÔÅÑ ', 'netrw': ' ÔÑî ', 'todo': ' Ôò≥ ',
                \   'gitcommit': ' Ôáì ', 'markdown': ' Ô°ì ' }
    return get(icon_map, &filetype, '')
endfunction

function! LightlineFilepath()
    let fpath = expand('%:p:~:h')
    if fpath[0] == '~'
        let fpath = ' ÔÆü ' . fpath[1:]
    endif
    return substitute(fpath, '/', ' ÔÉö ', 'g')
endfunction

function! LightlineLineinfo()
    if &filetype == 'undotree' || &filetype == 'qf' | return '' | endif
    return printf("c %d ÔÉô ln (%d/%d)", col('.'), line('.'), line('$'))
endfunction

function! LightlineQfinfo()
    if &filetype == 'qf'
        return "Entry:  ".line('.')
    else
        return ''
    endif
endfunction

function! LightlineGithunkStats()
    let [a,m,r] = GitGutterGetHunkSummary()
    let l:res = []
    " for [amt, sym] in [[a, '+'], [m, '~'], [r, '-']]
    "     if amt != 0
    "         call add(l:res, printf(sym.'%02d', sym))
    "     endif
    " endfor
    " return join(l:res, ', ')
    if a != 0
        call add(l:res, printf('ÔÅß %02d', a))
    endif
    if m != 0
        call add(l:res, printf('Ô∞£ %02d', m))
    endif
    if r != 0
        call add(l:res, printf('ÔÅ® %02d', r))
    endif
    return join(l:res, ', ')
    " return printf('ÔÅß %02d, Ô∞£ %02d, ÔÅ® %02d', a, m, r)
    " if a == 0 && m == 0 && r == 0 | return '' | endif
    " return printf('ÔÅß %02d, Ô∞£ %02d, ÔÅ® %02d', a, m, r)
    " return printf('+%d, ~%d, -%d', a, m, r)
endfunction

function! LightlineScrollbar()
    let width = 12
    let percent = (line('.') - 1.0) / (max([line('$'), 2]) - 1.0)
    let before = float2nr(round(percent * (width - 4)))
    let after = width - 4 - before
    return repeat(' ', before).'Ô∞ä '.repeat('¬∑', after)
endfunction

function! LightlineBufferInfo()
    let l:bnum = bufnr('%')
    return "Buf ".l:bnum
endfunction

