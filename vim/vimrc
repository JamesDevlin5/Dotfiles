      \   'ftypeicon': 'LightlineFiletypeicon',
      \   'githunkstats': 'LightlineGithunkStats',
      \   'bufinfo': 'LightlineBufferInfo',
      \ },
      \ 'mode_map': {
      \   'n' : 'NORMAL',
      \   'i' : 'INSERT',
      \   'R' : 'REPLACE',
      \   'v' : 'VISUAL',
      \   'V' : 'VISUAL-LINE',
      \   "\<C-v>": 'VISUAL-BLOCK',
      \   'c' : 'COMMAND',
