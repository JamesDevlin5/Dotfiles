" {{{ Lightline
let g:lightline = {
      \ 'colorscheme': 'deus',
      \ 'active': {
      \   'left': [
      \     [ 'mode', 'bufinfo', 'paste', 'filepath' ],
      \     [ 'readonly', 'filename', 'ftypeicon' ],
