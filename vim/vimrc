let g:gitgutter_sign_removed_above_and_below = '{'
let g:gitgutter_sign_modified_removed = '*'

function! GitGutterNextHunkCycle()
    let line = line('.')
    silent! GitGutterNextHunk
    if line('.') == line
        1
        GitGutterNextHunk
    endif
endfunction

nnoremap ghl :GitGutterLineHighlightsToggle<CR>

