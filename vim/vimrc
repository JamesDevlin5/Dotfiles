      \ 'inactive': {
      \   'left': [
      \     [ 'filepath', 'filename' ],
      \     [ 'readonly', 'ftypeicon' ],
      \     [ 'bufinfo' ]
      \   ],
      \   'right': [
      \     [ 'filetype' ],
      \     [ 'scrollbar', 'percent' ]
      \   ]
      \ },
      \ 'separator': { 'left': 'ÓÇ∞', 'right': 'ÓÇ≤' },
